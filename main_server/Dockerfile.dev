# Build stage
FROM golang:1.24 AS builder
WORKDIR /app

# Copy go.mod and go.sum and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy all source code
COPY . .

# Install Air for hot reloading in dev environment
RUN go install github.com/air-verse/air@latest

# Build the Go binary (this will build it for your local dev environment)
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o main-server main.go

# Ensure the binary is executable
RUN chmod +x main-server

# Runtime stage
FROM alpine:latest
WORKDIR /root/

# Install CA certificates for HTTPS/SSL support (needed for RDS)
RUN apk add --no-cache ca-certificates

# Install Air for dev environment
RUN apk add --no-cache --virtual .build-deps gcc musl-dev && \
    go install github.com/air-verse/air@latest && \
    apk del .build-deps

# Copy the compiled binary from the builder stage
COPY --from=builder /app/main-server .

# Expose the application port
EXPOSE 8080

# Set the correct entrypoint to run the binary with air for hot-reloading
CMD ["air"]
